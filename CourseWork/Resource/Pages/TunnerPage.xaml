<Page x:Class="CourseWork.Resource.Pages.TunnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Resource.UI.Tuners"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TunnerPage"
      Background="#FF525252">
      
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions> 
        <local:GuitarTuner/>
        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center">
                <Label Content="Выберите устройство записи" VerticalAlignment="Center" FontFamily="Rubik" Foreground="White" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cdDevice" Height="30" Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
